{
  "name": "next-hn-prime-kit",
  "scripts": {
    "dev": "next",
    "lint": "xo",
    "build": "chmod -R u+x node_modules/next/dist/bin && next build && node generate-sw.js",
    "build:report": "npm run build --report && webpack-bundle-analyzer .next/stats.json",
