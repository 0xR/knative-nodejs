{
  "name": "next-hnpwa-guide-kit",
  "version": "1.0.8",
  "engines": {
    "node": "^8.1.0"
  },
  "scripts": {
    "lint": "xo",
    "build": "next build && node generate-sw.js",
    "report": "npm run build --report && webpack-bundle-analyzer .next/stats.json",
    "start": "NODE_ENV=production node server.js",
    "deploy": "now --name=next-hnpwa --public",
    "remove": "now rm next-hnpwa --safe"
  },
  "dependencies": {
    "firebase": "^4.1.2",
    "firebase-hackernews": "^2.9.0",
    "isomorphic-fetch": "^2.2.1",
    "next": "^3.2.2",
    "react": "16.0.0",
    "react-dom": "16.0.0"
  },
  "devDependencies": {
    "finalhandler": "^1.0.6",
    "globby": "^6.1.0",
    "load-json-file": "^2.0.0",
    "micro": "^9.0.0",
    "router": "^1.3.1",
    "webpack-bundle-analyzer": "^2.8.2",
    "workbox-build": "^1.0.1",
    "workbox-webpack-plugin": "^1.0.1",
    "xo": "^0.18.2"
  },
  "xo": {
    "semicolon": false,
    "env": {
      "browser": true
    },
    "globals": [
      "window",
      "performance",
      "firebase"
    ]
  }
}
