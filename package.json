    "start": "NODE_ENV=production node server.js",
    "deploy": "now --name=next-hnpwa --public"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "firebase": "^4.1.2",
    "firebase-hackernews": "^2.9.0",
    "isomorphic-fetch": "^2.2.1",
    "lru-cache": "^4.1.1",
    "next": "beta",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "express": "^4.15.3",
    "globby": "^6.1.0",
    "load-json-file": "^2.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "workbox-build": "^1.0.1",
    "workbox-webpack-plugin": "^1.0.1",
    "xo": "^0.18.2"
  },
  "xo": {
    "semicolon": false,
    "env": {
      "browser": true
    },
    "globals": [
      "window",
      "performance",
      "firebase"
    ]
  }
